<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="madlibHistoryContainer" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">15dip</item>
        <item name="android:background">@drawable/madlib_history_container</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/bootstrap_brand_secondary_text</item>
    </style>
    <style name="title" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>
    <style name="madlibHistoryTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/bootstrap_brand_secondary_text</item>
    </style>
    <!-- Action btn parent -->
    <style name="actionBtn" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">40dip</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:width">@dimen/actionWidth</item>
        <item name="android:textColor">@color/bootstrap_brand_secondary_text</item>
        <item name="android:background">@drawable/action_btn</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    <!-- open btn -->
    <style name="madlibHistoryOpenBtn" parent="actionBtn">
        <item name="android:background">@drawable/open_btn</item>
        <item name="android:text">@string/open_btn</item>
        <item name="android:onClick">cli</item>
    </style>
    <!-- del btn -->
    <style name="madlibHistoryDelBtn" parent="actionBtn">
        <item name="android:background">@drawable/del_btn</item>
        <item name="android:text">@string/del_btn</item>
    </style>
    <!-- del all btn -->
    <style name="madlibHistoryDelAllBtn" parent="actionBtn">
        <item name="android:background">@drawable/del_all_btn</item>
        <item name="android:text">@string/del_all_btn</item>
        <item name="android:width">@dimen/delAllWidth</item>
        <item name="android:maxWidth">80dip</item>
    </style>
</resources>